// Get an alphabet and print the ASCII value of that

#include <stdio.h>

int main(){
    char ch;
    printf("Enter the character: ");
    scanf("%c", &ch);
    
    printf("The ASCII value of %c is %d",ch, ch);
}

// Get a number and print the ASCII value of that

#include <stdio.h>

int main(){
    int x;
    char ch;
    printf("Enter the number(0-9): ");
    scanf("%d", &x);
    ch= x+'0';
    printf("The ASCII value of %d is %d",x, ch);
}

// Get a string and print the same

#include <stdio.h>

int main(){
    char str[100];
    printf("Enter the string: ");
    fgets (str, sizeof(str), stdin);
    
    printf("%s", str);
}

// get a number as a string and print it as an integer

#include <stdio.h>
#include <stdlib.h>

int main(){
    char str[100];
    int num;
    printf("Enter the number as a string: ");
    fgets (str, sizeof(str), stdin);
    
    num= atoi(str);
    printf("The integer value: %d", num);
}

#include <stdio.h>
#include <stdlib.h>

int main() {
    char str[50];
    char *endptr;
    long num;

    printf("Enter a number as a string: ");
    fgets(str, sizeof(str), stdin);

    num = strtol(str, &endptr, 10);

    printf("Integer value = %ld", num);

    return 0;
}

// get an integer and print it as a string

#include <stdio.h>
#include <stdlib.h>

int main(){
    char str[100];
    int num;
    printf("Enter the number: ");
    scanf("%d", &num);
    sprintf (str, "%d", num);
    
    printf("The string value: %s", str);
}

#include <stdio.h>
#include <stdlib.h>

int main(){
    char str[100];
    int num;
    printf("Enter the number: ");
    scanf("%d", &num);
    sprintf (str, "%d", num);
    
    printf("The string value: %s", str);
}

// Get an interger and print each digit as a character

#include <stdio.h>

int main(){
    int n, digit, rev=0;
    char ch;
    
    printf("Enter the number: ");
    scanf("%d", &n);
    
    if (n==0){
        printf("character: %c", '0');
    }
    
    while (n>0){
        rev= rev*10 +(n%10);
        n= n/10;
    }
    
    while(rev>0){
        digit = rev% 10;
        ch= digit+'0';
        printf("Character: %c\n", ch);
        rev= rev/10;
    }
    return 0;
}

// lemgth of the string

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int length;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    length = strlen(str);
    
    if (str[length - 1] == '\n') {
        length--;
    }
    printf("Length of the string = %d", length);

}

#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    while (str[i] != '\0' && str[i] != '\n') {
        i++;
    }

    printf("Length of the string = %d", i);

    return 0;
}

// get string of numbers upto 50 and check whether it is valid or invalid

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int length=0, valid=1, i;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    
    for (i=0; str[i]!= '\0'; i++){
        if (str[i]=='\n'){
            break;
        }
        if (str[i]>='0' && str[i]<='9'){
            valid=1;
        } else {
            valid=0;
            break;
        }
        length++;
    }
    
    if (length==0 || length >50){
        valid=0;
    }
    
    if(valid){
        printf("Valid number");
    }else {
        printf("Invalid number");
    }
}

