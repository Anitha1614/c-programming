// Get an interger and print each digit as a character

#include <stdio.h>

int main(){
    int n, digit, rev=0;
    char ch;
    
    printf("Enter the number: ");
    scanf("%d", &n);
    
    if (n==0){
        printf("character: %c", '0');
    }
    
    while (n>0){
        rev= rev*10 +(n%10);
        n= n/10;
    }
    
    while(rev>0){
        digit = rev% 10;
        ch= digit+'0';
        printf("Character: %c\n", ch);
        rev= rev/10;
    }
    return 0;
}

// lemgth of the string

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int length;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    length = strlen(str);
    
    if (str[length - 1] == '\n') {
        length--;
    }
    printf("Length of the string = %d", length);

}

#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    while (str[i] != '\0' && str[i] != '\n') {
        i++;
    }

    printf("Length of the string = %d", i);

    return 0;
}

// get string of numbers upto 50 and check whether it is valid or invalid

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int length=0, valid=1, i;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    
    for (i=0; str[i]!= '\0'; i++){
        if (str[i]=='\n'){
            break;
        }
        if (str[i]>='0' && str[i]<='9'){
            valid=1;
        } else {
            valid=0;
            break;
        }
        length++;
    }
    
    if (length==0 || length >50){
        valid=0;
    }
    
    if(valid){
        printf("Valid number");
    }else {
        printf("Invalid number");
    }
}

// Get a string of 50 digirs and remove the leading zeroes

#include <stdio.h>
#include <string.h>

int main() {
   char str[100];
   int i=0;
   
   printf("Enter the string: ");
   fgets(str, sizeof(str), stdin);
   
   while(str[i]=='0'){
       i++;
   }
   
   if (i== strlen(str)){
       printf("Result: 0\n");
   } else{
       printf("Result: %s", &str[i]);
   }

}

// Get 50 digits and reverse the number

#include <stdio.h>
#include <string.h>

int main() {
   char str[100];
   int i=0, len;
   char temp;
   
   printf("Enter the string: ");
   fgets(str, sizeof(str), stdin);
   
   len= strlen(str);
   
   for (i=0; i<len/2; i++){
       temp= str[i];
       str[i]= str[len-i-1];
       str[len-i-1]= temp;
   }
   
   printf("Reversed Number: %s", str);
}

// covt string into array

#include <stdio.h>
#include <string.h>

int main() {
   char str[100];
   int i=0, len;
   int digits[100];
   
   printf("Enter the string: ");
   fgets(str, sizeof(str), stdin);
   str[strcspn(str, "\n")] = '\0';

   
   len= strlen(str);
   
   for(i=0; i<len; i++){
       if(str[i]>= '0' && str[i]<= '9'){
       digits[i]= str[i]- '0';
       }
       else{
       printf("Invalid Input number\n");
       return 1;
       }
   }
   
   printf("String to array\n");
   for(i=0; i<len; i++){
       printf("%d", digits[i]);
   }
   return 0;
}

// string to array

#include <stdio.h>

int main() {
    int digits[50];
    char str[51];   
    int n, i;

    printf("Enter number of digits (max 50): ");
    scanf("%d", &n);

    if (n > 50) {
        printf("Maximum 50 digits allowed\n");
        return 1;
    }

    printf("Enter %d digits:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &digits[i]);

        if (digits[i] < 0 || digits[i] > 9) {
            printf("Invalid digit\n");
            return 1;
        }
    }

   
    for (i = 0; i < n; i++) {
        str[i] = digits[i] + '0';
    }

    str[n] = '\0';   

    printf("Answer: %s\n", str);

    return 0;
}

