// Get an alphabet and print the ASCII value of that

#include <stdio.h>

int main(){
    char ch;
    printf("Enter the character: ");
    scanf("%c", &ch);
    
    printf("The ASCII value of %c is %d",ch, ch);
}

// Get a number and print the ASCII value of that

#include <stdio.h>

int main(){
    int x;
    char ch;
    printf("Enter the number(0-9): ");
    scanf("%d", &x);
    ch= x+'0';
    printf("The ASCII value of %d is %d",x, ch);
}

// Get a string and print the same

#include <stdio.h>

int main(){
    char str[100];
    printf("Enter the string: ");
    fgets (str, sizeof(str), stdin);
    
    printf("%s", str);
}

// get a number as a string and print it as an integer

#include <stdio.h>
#include <stdlib.h>

int main(){
    char str[100];
    int num;
    printf("Enter the number as a string: ");
    fgets (str, sizeof(str), stdin);
    
    num= atoi(str);
    printf("The integer value: %d", num);
}

#include <stdio.h>
#include <stdlib.h>

int main() {
    char str[50];
    char *endptr;
    long num;

    printf("Enter a number as a string: ");
    fgets(str, sizeof(str), stdin);

    num = strtol(str, &endptr, 10);

    printf("Integer value = %ld", num);

    return 0;
}

