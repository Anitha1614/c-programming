// print the numbers 1 to 5

#include <stdio.h>

int disp_ascend(){
    int i;
    for(i=1;i<6;i++){
        printf("%d\n", i);
    }
}

int main(){
    disp_ascend();
}

// print 5 to 1

#include <stdio.h>

int disp_descend(){
    int i;
    for(i=5;i>=1;i--){
        printf("%d\n", i);
    }
}

int main(){
    disp_descend();
}

// print thr sum of numbers 1 to 5

#include <stdio.h>

int disp_sum(){
    int i, sum=0;
    for(i=1;i<6;i++){
        sum=sum+i;
    }
    return sum;
}

int main(){
    int sum;
    sum=disp_sum();
    printf("%d", sum);
}

// print the reverse sum of numbers 6 to 1

#include <stdio.h>

int disp_rsum(){
    int i, sum=0;
    for(i=6;i>=1;i--){
        sum=sum+i;
    }
    return sum;
}

int main(){
    int sum;
    sum=disp_rsum();
    printf("%d", sum);
}

// print the odd numbers in 1 to 10

#include <stdio.h>

int disp_odd(){
    int i;
    for(i=1;i<10;i++){
        if (i%2==1){
            printf("%d\n", i);
        }
    }
}

int main(){
    disp_odd();
}

// print thr odd numbers from 11 to 20

#include <stdio.h>

int disp_2digit_odd_below20(){
    int i;
    for(i=10;i<=20;i++){
        if (i%2==1){
            printf("%d\n", i);
        }
    }
}

int main(){
    disp_2digit_odd_below20();
}

// print if the number is odd and the sum of digits is 7

#include <stdio.h>

int disp_2digit_odd_sum7(){
    int i;
    for(i=10;i<=100;i++){
        if ((i%2==1) && (i%10+i/10 ==7)){
            printf("%d\n", i);
        }
    }
}

int main(){
    disp_2digit_odd_sum7();
}

// print the number if it is even and sum of digits is 6

#include <stdio.h>

int disp_2digit_even_sum6(){
    int i;
    for(i=10;i<=100;i++){
        if ((i%2==0) && (i%10 + i/10==6)){
            printf("%d\n", i);
        }
    }
}

int main(){
    disp_2digit_even_sum6();
}

// print the sum of 2 digit odd numbers if ones digit is 7

#include <stdio.h>

int disp_2digit_odd_sum_tens7(){
    int i, sum=0;
    for(i=10;i<100;i++){
        if ((i/10==7) && (i%2==1)){
            sum = sum+i;
        }
    }
    printf("%d\n", sum);
}

int main(){
    disp_2digit_odd_sum_tens7();
}

// count the number of digits

#include <stdio.h>

int count_total_digits(int i){
    int count=0;
    while(i>0){
        i= i/10;
        count= count+1;
    }
   return count;
}

int main(){
    int n, count;
    printf("Enter the number: ");
    scanf("%d", &n);
    count= count_total_digits(n);
    printf("%d", count);
}

// print the sum of all the digits

#include <stdio.h>

int disp__sum_all_digits(int i){
    int sum=0, x;
    while(i>0){
        x= i%10;
        sum=sum+x;
        i=i/10;
    }
   return sum;
}

int main(){
    int n, sum;
    printf("Enter the number: ");
    scanf("%d", &n);
    sum= disp__sum_all_digits(n);
    printf("%d", sum);
}

// print the rev of the number

#include <stdio.h>

int disp__rev_number(int i){
    int rev=0, digit;
    while(i>0){
        digit=i%10;
        rev=rev*10 +digit;
        i=i/10;
    }
   return rev;
}

int main(){
    int n, sum;
    printf("Enter the number: ");
    scanf("%d", &n);
    sum= disp__rev_number(n);
    printf("%d", sum);
}

