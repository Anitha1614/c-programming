// get 5 numbers from the user and print the sum of elements

#include <stdio.h>

int main(){
    int a[5], i, sum=0;
    printf("Enter the 5 numbers ");
    for (i = 0; i < 5; i++) {
        scanf("%d", &a[i]);  
    }

    for (i=0; i<5; i++){
        sum= sum+ a[i];
    }
    printf("%d", sum);
}

// get 5 numbers and print the average of 5 numbers

#include <stdio.h>

int main(){
    int a[5], i, sum=0, average;
    printf("Enter the 5 numbers: \n");
    for (i = 0; i < 5; i++) {
        scanf("%d", &a[i]);  
    }

    for (i=0; i<5; i++){
        sum= sum+ a[i];
        average= sum/5;
    }
    printf("%d", average);
}

// print thr smallest number in the array

#include <stdio.h>

int main(){
    int a[5], i, sum=0, small;
    printf("Enter the 5 numbers: \n");
    for (i = 0; i < 5; i++) {
        scanf("%d", &a[i]);  
    }

    for (i=0; i<5; i++){
       if (a[i]< a[i+1])
       small = a[i];
    }
    printf("%d", small);
}

