// get an number ans change the number without changing it directly

#include <stdio.h>

int main() {
    int num;
    int *a;
    
    printf("Enter the number: ");
    scanf("%d", &num);
    
    a= &num;
    printf("Original number: %d\n", *a);
    
    *a=*a+10;
    printf("Changed number: %d", *a);
}

// Pass an integer array to a function using pointers and increment each element

#include <stdio.h>

void increamentarray(int *arr, int size){
    int i;
    for (i=0; i< size; i++){
        *(arr +i)= *(arr+i)+1;
    }
}

int main() {
    int n, i;
   
    printf("Enter the length of array: ");
    scanf("%d", &n);
    
    int numbers[n];
    
    printf("Enter the elements of the array\n");
    for (i=0; i<n; i++){
        scanf("%d", (numbers + i));
    }
    
    increamentarray (numbers, n);
    
    printf("Array after increment of each array element\n");
    for(i=0; i<n; i++){
        printf("%d ", *(numbers + i));
    }
}

// print 1-5 loop

#include <stdio.h>

void arrange_ascend(int *arr, int size){
    int i;
    for (i=0; i< size; i++){
        *(arr +i)= i+1;
    }
}

int main() {
    int i;
    int array[5];

    arrange_ascend(array, 5);
    
    printf("Array Elements\n");
    for(i=0; i<5; i++){
        printf("%d\n", *(array + i));
    }
}

// Two digit odd numbers whose sum is 7

#include <stdio.h>

void find_2digit_odd_sum7(int *result, int *count) {
    int num;
    *count = 0;

    for (num = 11; num <= 99; num++) {
        int tens = num / 10;
        int units = num % 10;

        if ((num % 2 != 0) && (tens + units == 7)) {
            *(result + *count) = num;  
            (*count)++;
        }
    }
}

int main() {
    int result[10];   
    int count;
    int i;
    
    find_2digit_odd_sum7(result, &count);

    for (i = 0; i < count; i++) {
        printf("%d", *(result + i));
        if (i < count - 1)
            printf(", ");
    }

    return 0;
}

