// Get a 3 digit number and return the ones digit of the number

#include<stdio.h>

int a, onesDigit;
int main(){
    printf("Enter the number: \n");
    scanf("%d", &a);
    onesDigit= a%10;
    printf("The Ones Digit of the number is %d", onesDigit);
}

// Get a 2 digit number and return the tens digit of the number

#include<stdio.h>

int a, TensDigit;
int main(){
    printf("Enter the number: \n");
    scanf("%d", &a);
    TensDigit= a/10;
    printf("The Tens digit of the number is %d", TensDigit);
}

// Get a 3 digit number and return tens digit of the number

#include<stdio.h>

int a, temp, tensDigit;
int main(){
    printf("Enter the number: \n");
    scanf("%d", &a);
    temp= a/10;
    tensDigit= temp%10;
    printf("The tens digit of the number is %d", tensDigit);
}

// Get a 3 digit numbe and print the sum of the digits

#include<stdio.h>

int a, b, c, d, e, sum;
int main(){
    printf("Enter the number: \n");
    scanf("%d", &a);
    b= a%10;
    c= a/10;
    d= c%10;
    e= c/10;
    sum= b+d+e;
    printf("The number is %d", sum);
}

// Reverse a two digit number

#include <stdio.h>

int main() {
    int n, rev;
    printf("Enter a two-digit number: ");
    scanf("%d", &n);
    rev = (n % 10) * 10 + (n / 10);
    printf("Reversed number: %d\n", rev);
}

// Reverse a 3 digit number

#include <stdio.h>

int main() {
    int n,x, y, z, rev;
    printf("Enter a three-digit number: ");
    scanf("%d", &n);
    x= n%10;
    y= n/10;
    z= y%10;
    rev = (n % 10) * 100 + (y % 10) * 10 + (n/100);
    printf("Reversed number: %d", rev );
}

// Get a 4 digit number and reverse the last two digit alone

#include <stdio.h>

int main() {
    int n,x, y, z,a, rev;
    printf("Enter a four-digit number: ");
    scanf("%d", &n);
    x= n%10;
    y= n/10;
    z= y%10;
    a= n/100;
    rev = a * 100 + (n % 10) * 10 + z;
    printf("The number: %d", rev  );
}

// Get a two digit number and make the tens digit as 1

#include <stdio.h>

int main() {
    int n,x, num;
    printf("Enter a two-digit number: ");
    scanf("%d", &n);
    x= n%10;
    num= x+10;
    printf("The number: %d", num);
}


// Get a three digit number and make the ones digit as 2 and print it

#include <stdio.h>

int main() {
    int n,x, num;
    printf("Enter a three-digit number: ");
    scanf("%d", &n);
    x= n/10;
    num= (x*10) +2;
    printf("The number: %d", num);
}


// check odd or even without using if

#include <stdio.h>

int main() {
    int n,x;
    printf("Enter a three-digit number: ");
    scanf("%d", &n);
    x= n-5;
    !(x%2)&& printf("The number: %d", x);
}

// Get a 3 digit number and print the number if ones digit and hundereds digit is odd

#include <stdio.h>

int main() {
    int n,x,z, a, y;
    printf("Enter a three-digit number: ");
    scanf("%d", &n);
    x= n-5;
    printf("The number: %d\n", x);
    y= n%10;
    z= y%10;
    a= n/100;
    (y%2)&& printf("The number if ones digit is odd: %d\n", n);
    (a%2)&& printf("The number if 100's digit is odd: %d\n", n);
}

// Get a 3 digit number and print the sum of the digit, the sum should be a single digit

#include <stdio.h>

int main() {
    int n,x,z, a, y, sum, sum1, b, c;
    printf("Enter a three-digit number: ");
    scanf("%d", &n);
    x= n%10;
    y= n/10;
    z= y%10;
    a= y/10;
    sum= x+z+a;
    if(sum<10){
        printf("The sum of the digits: %d", sum);
    }
    else{
        b= sum%10;
        c= sum/10;
        sum1= b+c;
        printf("The sum of the digits: %d", sum1);
    }
}

// Get a 4 digit number and reverse the last two digit and print

#include <stdio.h>

int main() {
    int n, x, z, y, a, rev;
    printf("Enter a four-digit number: ");
    scanf("%d", &n);
    a= n%100;
    x= n/100;
    y= x%10;
    z= x/10;
    rev= y*1000 + z*100 + a;
    //printf("The sum of the digits: %d,%d,%d,%d", x, y, z, a);
    printf("The Number: %d", rev);
}
