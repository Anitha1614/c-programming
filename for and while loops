// print the numbers 1 to 5

#include <stdio.h>

int i;
int main() {
    for (i=1; i<=5; i++){
        printf("%d\n", i);
    }
}

// print the numbers 5 to 1

#include <stdio.h>

int i;
int main() {
    for (i=5; i>=1; i--){
        printf("%d\n", i);
    }
}

// print the sum of numbers 1 to 5

#include <stdio.h>

int i, sum=0;
int main() {
    for (i=1; i<=5; i++){
        sum= sum+i;
    }
    printf("%d\n", sum);
}

// print the sum of numbers 6 to 1

#include <stdio.h>

int i, sum=0;
int main() {
    for (i=6; i>=1; i--){
        sum= sum+i;
    }
    printf("%d\n", sum);
}

// print the odd numbers from 10 to 20

#include <stdio.h>

int i;
int main() {
    for (i=10; i<=20; i++){
        if(i%2==1){
            printf("%d\n", i);
        }
    }
}

// print if the number is odd and the sum of digits is 7

#include <stdio.h>

int i;
int main() {
    for (i=10; i<=100; i++){
        if((i%2==1) && (i%10 + i/10 == 7)){
            printf("%d\n", i);
        }
    }
}

// print the sum of 2 digit numbers whose ones digit is 5

#include <stdio.h>

int i, sum=0;
int main() {
    for (i=10; i<=100; i++){
        if(i%10==5){
            printf("%d\n", i);
            sum= sum+i;
        }
    }
    printf("%d", sum);
}

// print the sum of two digit odd number whose tens digit is 7

#include <stdio.h>

int i, sum=0;
int main() {
    for (i=10; i<=100; i++){
        if((i/10==7)&& (i%2==1)){
            printf("%d\n", i);
            sum= sum+i;
        }
    }
    printf("%d", sum);
}

// print the number of digits fo the number

#include <stdio.h>

int n, count=0;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    while(n>0){
        n=n/10;
        count= count+1;
    }
    printf("%d", count);
}

// print the sum of the digits of the given number

#include <stdio.h>

int n, x, sum=0;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    while(n>0){
        x=n%10;
        sum= sum+x;
        n=n/10;
    }
    printf("%d", sum);
}

// print the revese of the number

#include <stdio.h>

int n, rev=0, digit=1;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    while(n>0){
        digit=n%10;
        rev=rev*10 +digit;
        n=n/10;
    }
    printf("%d", rev);
}

// interchange only the first and last digit

#include <stdio.h>

int n, temp, last, div=1, middle, first, number;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    temp=n;
    last= n%10;
    
    while(temp>=10){
        temp=temp/10;
        div=div*10;
    }
    first= temp;
    middle= (n%div)/10;
    number= (last*div)+ (middle*10)+ first;
    printf("%d", number);
}

// print the number as it is if the last digit is even else subtract 1 from the digit and return the number

#include <stdio.h>

int n, temp, last, div=1, number, result;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    temp=n;
    
    while(temp>=10){
        temp=temp/10;
        div=div*10;
    }
    last= temp;
    number= n % div;
    
    if (temp%2==1){
        temp=temp-1;
        result= (temp*div)+ number;
        printf("%d", result);
    }
    else{
        printf("%d", n);
    }
}

// prime or not

#include <stdio.h>

int n,i;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    
    if(n<=1){
        printf("it is not a prime number");
        return 0;
    }
    for(i=2; i<= n/2; i++){
        if(n%i ==0){
            printf("It is not a prime number");
        }
    }
    
    printf("It is a prime number");
}

// prime and sum of digits is 14 or not, 4 conditions

#include <stdio.h>

int main() {
    int n, temp, sum = 0, i;
    int isPrime = 1;

    printf("Enter the number: ");
    scanf("%d", &n);

    if (n <= 1) {
        isPrime = 0;
    } else {
        for (i = 2; i <= n / 2; i++) {
            if (n % i == 0) {
                isPrime = 0;
                break;
            }
        }
    }

    temp = n;
    while (temp > 0) {
        sum = sum + (temp % 10);
        temp = temp / 10;
    }

    if (isPrime && sum == 14)
        printf("Prime & sum of digits is 14");
    else if (!isPrime && sum == 14)
        printf("Not Prime but sum of digits is 14");
    else if (isPrime && sum != 14)
        printf("Prime & sum of digits is not 14");
    else
        printf("Not Prime & sum of digits is not 14");

    return 0;
}

// get a number and check the last two digit of the numbe is prime or not

#include <stdio.h>

int n,i, x;
int main() {
    printf("Enter the number: ");
    scanf("%d", &n);
    
    x= n%100;
    
    if(x<=1){
        printf("it is not a prime number");
        return 0;
    }
    for(i=2; i<= x/2; i++){
        if(x%i ==0){
            printf("It is not a prime number");
            return 0;
        }
    }
    
    printf("It is a prime number");
}

// get a 4 digit number and check whether the  middle two digit number is prime or not

#include <stdio.h>

int n,i, x,y;
int main() {
    printf("Enter 4 digit number: ");
    scanf("%d", &n);
    
    y= n/10;
    x= y%100;
    
    if(x<=1){
        printf("it is not a prime number");
        return 0;
    }
    for(i=2; i<= x/2; i++){
        if(x%i ==0){
            printf("It is not a prime number");
            return 0;
        }
    }
    
    printf("It is a prime number");
}



